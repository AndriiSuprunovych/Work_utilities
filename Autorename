import os

for f in os.listdir ():
    f_name, f_ext = os.path.splitext (f)  # розілили кожну назву на дві частини: назва та розширення файлу
    if f_name.count(" - ") < 2:  # Рахуємо кількість пробілів у назві файлу
        continue
    elif f_ext == ".pdf":  # Перевіряємо розширення файлу, щоб програма працювала тільки з PDF форматом
        st1 = (f_name[f_name.find(" - ") + 1:])
        st2 = (st1[st1.find(" - ") + 1:])
        st3 = (st2[st2.find("ST"):])
        new_name = (st3[:st3.find(" ")])  # Відрізаємо кінець назви файлу, лишаючи тільки ту частину , що нам потрібна
        os.rename(f, new_name + ".pdf")  # Перейменовуємо файл і дописуємо в кінці розширення, щоб даний файл читався
